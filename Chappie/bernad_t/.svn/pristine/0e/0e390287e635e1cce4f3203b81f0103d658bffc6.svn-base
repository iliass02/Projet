void	my_putchar(char c);

void	my_put_nbr(int nb)
{
  int	c;
  int	mult;
  int	save;

  mult = 1;
  if(nb == -2147483648)
    {
      my_put_nbr(nb / 10);
      my_putchar('8');
    }
  else
    {
      if (nb < 0)
	{
	  my_putchar('-');
	  nb = -nb;
	}
      save = nb;
      while(save > 9)
	{
	  mult *= 10;
	  save /= 10;
	}
      while (mult >= 1)
	{
	  c = nb / (mult);
	  my_putchar(c + '0');
	  nb = nb - (c * (mult));
	  mult /= 10;
	}
    }
}
